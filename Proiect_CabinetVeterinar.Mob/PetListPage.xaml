<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_CabinetVeterinar.Mob.PetListPage"
             Title="Animalele mele">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adaugă animal" Clicked="OnAddPetClicked" />
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="petListView" Margin="10" SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" Padding="10" Margin="5">
                    <StackLayout>
                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18" />
                        <Label Text="{Binding Species}" />
                        <Label Text="{Binding Breed}" />
                        <Label Text="{Binding BirthDate, StringFormat='Data nașterii: {0:dd/MM/yyyy}'}" />
                        <Label Text="{Binding Age, StringFormat='Vârstă: {0} ani'}" />

                        <Grid ColumnSpacing="10" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button Text="Editare" Clicked="OnEditClicked" />
                            <Button Text="Șterge" Grid.Column="1" Clicked="OnDeleteClicked" />
                        </Grid>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
