<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_CabinetVeterinar.Mob.PetEntryPage"
             Title="Adaugă/Editează animal">

    <StackLayout Padding="20" Spacing="15">
        <Entry x:Name="nameEntry" Placeholder="Nume animal" />
        <Entry x:Name="speciesEntry" Placeholder="Specie (ex: Câine, Pisică)" />
        <Entry x:Name="breedEntry" Placeholder="Rasă (ex: Labrador)" />
        <DatePicker x:Name="birthDatePicker" />

        <Grid ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Text="Salvează" Clicked="OnSaveClicked" />
            <Button Text="Anulează" Grid.Column="1" Clicked="OnCancelClicked" />
        </Grid>
    </StackLayout>
</ContentPage>
