@page
@model Proiect_CabinetVeterinar.Pages.Pets.EditModel
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize(Roles = "Admin")]

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pet.ID" />
            <div class="form-group">
                <label asp-for="Pet.Name" class="control-label"></label>
                <input asp-for="Pet.Name" class="form-control" />
                <span asp-validation-for="Pet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Species" class="control-label"></label>
                <input asp-for="Pet.Species" class="form-control" />
                <span asp-validation-for="Pet.Species" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Breed" class="control-label"></label>
                <input asp-for="Pet.Breed" class="form-control" />
                <span asp-validation-for="Pet.Breed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.BirthDate" class="control-label"></label>
                <input asp-for="Pet.BirthDate" class="form-control" />
                <span asp-validation-for="Pet.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.OwnerID" class="control-label"></label>
                <select asp-for="Pet.OwnerID" class="form-control"
                        asp-items="ViewBag.OwnerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pet.VetID" class="control-label"></label>
                <select asp-for="Pet.VetID" class="form-control" asp-items="ViewBag.VetID"></select>
                <span asp-validation-for="Pet.VetID" class="text-danger"></span>
            </div>
            <div class="table">
        <table>
            <tr>
                @{
                    int cnt = 0;
                    foreach (var service in Model.AssignedServicesDataList)
                    {
                        if (cnt++ % 3 == 0)
                        {
                            @:</tr><tr>
                        }
                        @:<td>
                            <input type="checkbox"
                                   name="selectedServices"
                                   value="@service.ServiceID"
                                   @(Html.Raw(service.Assigned ? "checked=\"checked\"" : "")) />
                            @service.ServiceID @: @service.Name
                        @:</td>
                    }
                }
            </tr>
        </table>
    </div>
        <div class="form-group">
    
</div>



            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
