@page
@model Proiect_CabinetVeterinar.Pages.Vets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Medici veterinari</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vet[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vet[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vet[0].Specialization)
            </th>
            <th>Animale tratate</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
                <td>
                    @item.Pets?.Count()
                </td>

            <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
