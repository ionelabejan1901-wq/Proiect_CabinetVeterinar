@page
@model Proiect_CabinetVeterinar.Pages.Appointments.EditModel
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize(Roles = "Admin")]

@{
    ViewData["Title"] = "Editează Programare";
}

<h1>Editează Programare</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Appointment.ID" />
            <div class="form-group">
                <label asp-for="Appointment.AppointmentDate" class="control-label"></label>
                <input asp-for="Appointment.AppointmentDate" class="form-control" />
                <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.OwnerID" class="control-label">Stăpân</label>
                <select asp-for="Appointment.OwnerID" class="form-control" asp-items="ViewBag.OwnerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.PetID" class="control-label">Animal</label>
                <select asp-for="Appointment.PetID" class="form-control" asp-items="ViewBag.PetID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.ServiceID" class="control-label">Serviciu</label>
                <select asp-for="Appointment.ServiceID" class="form-control" asp-items="ViewBag.ServiceID"></select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvează" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Renunță</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
